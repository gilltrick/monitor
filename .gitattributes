# Auto detect text files and normalize line endings to LF in the repository
* text=auto eol=lf

# Shell scripts should always use LF line endings (Unix style)
*.sh text eol=lf

# Python scripts should use LF line endings
*.py text eol=lf

# Batch files should use CRLF line endings (Windows style)
*.bat text eol=crlf

# Explicitly set line endings for specific files
.gitattributes text eol=lf
.gitignore text eol=lf
